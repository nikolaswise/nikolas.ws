---
template: _templates/sitemap.xml
---

{% for page in sitemap %}
  <url>
    <loc>http://nikolas.ws{{page.url}}</loc>
    {% if page.thumbnail %}
      <image:image>
        <image:loc>http://nikolas.ws/_assets/img/{{page.thumbnail}}</image:loc>
      </image:image>
    {% endif %}
    <changefreq>
      {% if page.changefreq %}
        {{page.changefreq}}
      {% else %}
        never
      {% endif %}
    </changefreq>
  </url>
{% endfor %}