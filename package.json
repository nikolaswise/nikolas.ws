{
  "name": "nikolas-wise",
  "version": "0.0.0",
  "description": "Printmaker, artist, graphic designer, and front end developer. Design focuses on the use of classical typographic and design principles with contemporary technology. Artistic practice concerns geographic specificity and knowledge of place.",
  "repository": {
    "type": "git",
    "url": "https://github.com/nikolaswise/nikolas.ws.git"
  },
  "author": "Nikolas Wise <nikolas@nikolas.ws> (http://nikolas.ws/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nikolaswise/nikolas.ws/issues"
  },
  "homepage": "http://nikolas.ws/",
  "devDependencies": {
    "barba.js": "^1.0.0",
    "imagemin-newer": "^1.0.1",
    "node-sass": "^4.9.0",
    "npm-run-all": "^1.7.0",
    "parcel": "^1.8.1",
    "rerun-script": "^0.6.0",
    "static-site": "^1.0.2"
  },
  "watches": {
    "html": [
      "src/**/*.html",
      "src/**/*.md"
    ],
    "sass": "src/**/*.scss",
    "img": "src/"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "start": "npm run dev",
    "predeploy": "npm run predev && npm run clean",
    "deploy": "surge build/ --domain nikolas.ws",
    "prestudio": "npm run predeploy",
    "studio": "surge build/ --domain studio.nikolas.ws",
    "predev": "npm-run-all html sass img font",
    "dev": "parallelshell 'http-server build/ --port=8080' 'rerun-script' 'npm run js:watch'",
    "js:watch": "simplifyify src/_assets/js/app.js -o build/assets/js/app.js -b -w",
    "sass": "node-sass src/_assets/scss/ -o build/assets/css/ --include-path node_modules/",
    "html": "static-site -s src -h src/_helpers/*.js -f xml --template _templates/layout.html --block content ",
    "img": "imagemin-newer src/ build/",
    "font": "cp -r src/_assets/fonts build/assets",
    "postcss": "postcss build/assets/css/style.css --use autoprefixer -o build/assets/css/style.css",
    "clean": "cleancss -o build/assets/css/style.css build/assets/css/style.css"
  }
}
