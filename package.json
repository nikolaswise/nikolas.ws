{
  "name": "nk-ws",
  "version": "2.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/nikolaswise/nikolas.ws.git"
  },
  "author": "Nikolas Wise <nikolas@nikolas.ws> (http://nikolas.ws/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nikolaswise/nikolas.ws/issues"
  },
  "homepage": "http://nikolas.ws/",
  "devDependencies": {
    "autoprefixer": "^8.5.0",
    "barba.js": "^1.0.0",
    "imagemin-newer": "^1.0.1",
    "live-server": "^1.2.0",
    "markdown-it": "^8.4.1",
    "markdown-it-footnote": "^3.0.1",
    "markdown-it-highlightjs": "^3.0.0",
    "moment": "^2.22.1",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "^1.8.1",
    "postcss-cli": "^5.0.0",
    "rerun-script": "^0.6.0",
    "static-site": "^1.0.2",
    "typeset": "^0.2.2"
  },
  "watches": {
    "html": [
      "source/**/*.html",
      "source/**/*.md"
    ],
    "css": [
      "source/**/*.css"
    ],
    "js": [
      "source/**/*.js"
    ],
    "img": [
      "source/**/*.png",
      "source/**/*.jpg",
      "source/**/*.gif"
    ]
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "run-p html js css serve watch",
    "build": "run-p html js css",
    "html": "static-site -s source -b build --template _templates/layout.html --block content",
    "serve": "live-server build",
    "css": "parcel build source/css/style.css -d build && parcel build source/css/components.css -d build",
    "js": "parcel build source/js/app.js -d build",
    "watch": "rerun-script",
    "img": "imagemin-newer source/ build/",
    "predeploy:stage": "npm run build",
    "deploy:stage": "surge build --domain stage.nikolas.ws",
    "predeploy:prod": "npm run build",
    "deploy:prod": "surge build --domain nikolas.ws"
  }
}
