{
  "name": "nk-ws",
  "version": "2.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/nikolaswise/nikolas.ws.git"
  },
  "author": "Nikolas Wise <nikolas@nikolas.ws> (http://nikolas.ws/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nikolaswise/nikolas.ws/issues"
  },
  "homepage": "http://nikolas.ws/",
  "devDependencies": {
    "autoprefixer": "^8.5.0",
    "barba.js": "^1.0.0",
    "imagemin-newer": "^1.0.1",
    "markdown-it": "^8.4.1",
    "markdown-it-footnote": "^3.0.1",
    "markdown-it-highlightjs": "^3.0.0",
    "moment": "^2.22.1",
    "node-sass": "^4.9.0",
    "npm-run-all": "^1.7.0",
    "parcel-bundler": "^1.8.1",
    "postcss-cli": "^5.0.0",
    "rerun-script": "^0.6.0",
    "static-site": "^1.0.2",
    "typeset": "^0.2.2"
  },
  "watches": {
    "html": [
      "src/**/*.html",
      "src/**/*.md"
    ],
    "sass": "src/**/*.scss",
    "img": "src/"
  },
  "scripts": {
    "start": "npm run dev",
    "deploy": "surge build/ --domain nikolas.ws",
    "css": "postcss src/css/style.css --use autoprefixer -o build/style.css",
    "js": "parcel build src/js/app.js -d build/",
    "html": "static-site -s src -h src/_helpers/*.js -f xml --template _templates/layout.html --block content ",
    "img": "imagemin-newer src/ build/",
    "font": "cp -r src/_assets/fonts build/assets",
    "clean": "cleancss -o build/assets/css/style.css build/assets/css/style.css"
  }
}
